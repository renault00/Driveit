
<div class="center">
<h3>Welcome to Driver It Autotrader</h3>
		<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
		  <!-- Indicators -->
		  <ol class="carousel-indicators">
		    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
		    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
		    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
		  </ol>

		  <!-- Wrapper for slides -->
		  <div class="carousel-inner">
		    <div class="item active">
		      <%= image_tag('carousel 1.jpg', alt: "Home image")  %>		      
		    </div>
		    <div class="item">
		      <%= image_tag('carousel2.jpg', alt: "Home image")  %>		      
		    </div>
		    <div class="item">
		      <%= image_tag('carousel3.jpg', alt: "Home image")  %>		      
		    </div>
		  </div>

		  <!-- Controls -->
		  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
		    <span class="glyphicon glyphicon-chevron-left"></span>
		  </a>
		  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
		    <span class="glyphicon glyphicon-chevron-right"></span>
		  </a>
		</div>
<h2>




</h2>

<%= link_to "Sign up now!", signup_path, class: "signUpButton" %>

		<div>

			<div class="clear"></div>


			<div class="row clear">
			    <h1>This week's latest offers</h1>
			  	<% Product.find(:all, :order => "price desc", :limit => 3).each do |product| %>
			  	<div class="span4">
			    		<%= image_tag product.image_url(:thumbnail).to_s, class: "thumbnail" %><br>
			    		<b><%= product.name.capitalize %></b><br>
			    		<b><%= product.car_model.capitalize %></b><br>
			    		<%= product.car_year %><br>
			    		<%= number_to_currency product.price, :unit => "R" %><br>
			    	
			    	</div>     
			    <% end %>
			  </div> 

		</div>
</div>
