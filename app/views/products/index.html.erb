

<div class='row'>
	<div class="pull-left">
			<%= form_tag products_path, :method => 'get', :class => 'form-inline', :role => 'form' do %>
				<form class="form-inline" role="form">
				  <div class="form-group">
				    <%= text_field_tag :search, params[:search] %>		    

				  </div>
				  <%= submit_tag "Search", :name => nil, :id => 'searchBtn'  %>
			<% end %>
	</div>
	
	<div>
		<b><%= pluralize(@products.count, 'car') %> </b>
	</div>

	
</div>

<div>
<ul class="nav nav-tabs">
		<li><%= link_to "All cars", cars_path , class: "active"%></li>
		<li><%= link_to "Bakkies", find_products_path(:find => { :category => "bakkie"})%></li>
		<li><%= link_to "Sports cars", find_products_path(:find => { :category => "sports"}) %></li>
		<li><%= link_to "4x4s", find_products_path(:find => { :category => "4x4"}) %></li>
		<li><%= link_to "Sedans", find_products_path(:find => {:category => "sedan"}) %></li>
		<li><%= link_to "Trucks", find_products_path(:find => {:category => "truck"}) %></li>
	</ul>
</div>

